						}else{
							$snapshot = $film->getImageThumb(234,220);
						}						
						echo '<img src="' . $this->basePath() . '/videos/' . $snapshot . '" />';
					}else{
						echo '<img src="' . $film->getVimeoThumb('large') . '" />';
					}
				?>
				<div class="filmTitle">
					<span>
					<?php if($locale == 'en_US'){
						echo $this->escapeHtml($film->getNameEn());
					}else{
						echo $this->escapeHtml($film->getName());
					} ?>	
					</span>	
					<span class="filmDate">
						<?php echo $film->getPostTime(); ?>
					</span>		
				</div>
			</li>
