		<img class="sepLine" src="<?php echo $this->basePath() . '/images/line.png'; ?>" />	
		<ul>
		<?php
			$i = 0; 
			foreach($latestFilms as $film): 
				$snapshot = $film->getSnapshot();
		?>
			<li class="video-<?php echo $film->getVideoId();?>">
				<?php 
					if(!empty($snapshot)){
						if($i == 0){
							$snapshot = $film->getImageThumb(470,445);
